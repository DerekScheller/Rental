@model Rental2.Models.YearlyRental

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>YearlyRental</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CurrentTenant)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CurrentTenant.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Property)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Property.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MonthlyPayments)
        </dt>
        <dd>
            @foreach (Payment chuck in Model.MonthlyPayments)
            {
                @Html.DisplayFor(modelItem => chuck.PaymentAmount)
                <br />
            }
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
